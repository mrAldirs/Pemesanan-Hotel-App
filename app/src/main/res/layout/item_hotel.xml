<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/itemKamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kamar"
                android:maxLines="1"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/itemHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="harga"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/itemAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alamat"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/itemFasilitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fasilitas"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/liner"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            app:cornerRadius="26dp"
            android:backgroundTint="#29B6F6"
            android:text="Edit"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_hapus"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            app:cornerRadius="26dp"
            android:backgroundTint="#DD0E0A"
            android:text="Hapus"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_lokasi"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            app:cornerRadius="26dp"
            android:textAllCaps="false"
            android:backgroundTint="#66BB6A"
            android:text="Lokasi"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#939393"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/linear"/>
</androidx.constraintlayout.widget.ConstraintLayout>